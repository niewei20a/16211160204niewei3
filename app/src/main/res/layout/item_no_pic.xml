<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_no_top"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/textView_no_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView_no_top"
        android:maxLines="3"
        android:textSize="?font14" />

    <TextView
        android:id="@+id/textView_no_res"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/textView_no_title"
        android:maxLines="1"
        android:textSize="?font10"/>

    <TextView
        android:id="@+id/textView_no_bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/textView_no_res" />

</RelativeLayout>
